{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@types": ["./src/@types/index.ts"]
    },
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ]
}
